<ChildBox>:
	# This item is static!!!

	orientation: 'vertical'

	# Button:
	# 	text: '   Task\nDetails'
	# 	font_size: 48
	# 	background_color: 'blue'
	# 	on_press: root.parent.parent.manager.current = 'taskDetails'

	Label:
		text: 'Task Manager'
		halign: "center"
		font_size: 48
		background_color: "blue"

	BoxLayout:
		orientation: "horizontal"

		Button:
			text: 'Create\n Task'
			font_size: 24
			background_color: "yellow"
			on_press: root.parent.parent.manager.current = 'add'
		
		Button:
			text: "Save List"
			font_size: 24
			background_color: "green"
			on_press: app.save_list_into_json()

		Button:
			text: "Calendar\nView"
			font_size: 24
			background_color: "blue"
			on_press: root.parent.parent.manager.current = 'calendar'

	Label:
		text: 'Quick New Task'
		padding: [0,100,0,0]
		font_size: 24

	TextInput:
		id: input_new_task_field
		size_hint_y: 0.3
		font_size: 18

	Button:
		text: 'Add new task'
		font_size: 24
		on_press: app.quick_new_task()

